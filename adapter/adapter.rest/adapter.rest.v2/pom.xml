  <groupId>sss.adapter.rest</groupId>
  <artifactId>adapter.rest.v2</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>war</packaging>

  <name>adapter.rest.v2</name>

  <build>
    
      <plugins>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.1.1</version>
        <configuration>
          <failOnMissingWebXml>false</failOnMissingWebXml>
          <packagingExcludes>WEB-INF/web.xml</packagingExcludes>
        </configuration>
      </plugin>
      
      <!-- MAVEN WAR end -->
      
      <!-- MAVEEN resources start --> 
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.5</version>
        <configuration>
          <encoding>${project.build.sourceEncoding}</encoding>
        </configuration>
        
        <executions>
        
          <execution>
            <id>copy-docker-conf</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/conf/</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/resources/</directory>
                </resource>
              </resources>
            </configuration>
          </execution>
          
          <execution>
            <id>copy-conf</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/conf/</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/resources/</directory>
                  <includes>
                    <include>log4j.properties</include>
                    <include>sss.adapter.rest.v2.conf.yaml</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
          
        </executions>
      </plugin>
      
      <!-- MAVEEN resources end --> 
      
       <!-- SWAGGER start -->
      
      <plugin>
        <groupId>com.github.kongchen</groupId>
        <artifactId>swagger-maven-plugin</artifactId>
        <version>${ssSwaggerMavenPluginVersion}</version>
        <configuration>
         
          <apiSources>
                       
            <apiSource>
              <apiVersion>v2</apiVersion>
              <basePath>http://localhost:8080/sss.adapter.rest.v2</basePath> 
              <!-- 
                localhost:8080/sss.adapter.rest.v2  
                test-ll.know-center.tugraz.at/layers.test
              -->
              <locations>at.tugraz.sss.adapter.rest.v2</locations>
              
              <apiInfo>
                <title>Social Semantic Server REST API</title>
                <description>https://github.com/learning-layers/SocialSemanticServer/</description>
                <termsOfServiceUrl>https://github.com/learning-layers/</termsOfServiceUrl>
                <contact>${project.contact}</contact>
                <license>${project.license}</license>
                <licenseUrl>${project.licenseURI}</licenseUrl>
              </apiInfo>
              
              <swaggerUIDocBasePath>http://localhost:8080/sss.adapter.rest.v2/api-docs</swaggerUIDocBasePath> 
              <!-- 
                localhost:8080/sss.adapter.rest.v2/api-docs 
                test-ll.know-center.tugraz.at/layers.test/api-docs  
              -->
              <swaggerInternalFilter>com.wordnik.swagger.config.DefaultSpecFilter</swaggerInternalFilter>
              <!--<overridingModels>/swagger-overriding-models.json</overridingModels>-->
              <outputPath>${basedir}/src/main/webapp/api-docs</outputPath>
              <swaggerDirectory>${basedir}/src/main/webapp/api-docs</swaggerDirectory>
              <useOutputFlatStructure>false</useOutputFlatStructure>
            </apiSource>
            
          </apiSources>
          
        </configuration>
        <executions>
          <execution>
            <phase>compile</phase>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      
      <!-- SWAGGER end -->
        
    </plugins>
  </build>
  
