    </init-param>
        
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>SSRESTAppStackLayouts</servlet-name>
    <url-pattern>/appstacklayouts/*</url-pattern>
  </servlet-mapping>
  
